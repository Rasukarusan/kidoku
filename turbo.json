{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "NEXTAUTH_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "BLOB_READ_WRITE_TOKEN",
        "MEILI_HOST",
        "MEILI_MASTER_KEY",
        "ADMIN_AUTH_TOKEN",
        "RESEND_API_KEY",
        "MAIL_FROM",
        "OPENAI_API_KEY",
        "KV_URL",
        "KV_REST_API_URL",
        "BACKDOOR_USER_EMAIL",
        "REVALIDATE_SECRET",
        "NESTJS_GRAPHQL_ENDPOINT",
        "COHERE_API_KEY",
        "TIKTOKEN_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "test/**", "jest.config.*", "tsconfig.json"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
