# Database (docker-compose.yml の設定に合わせる)
DB_HOST=127.0.0.1
DB_PORT=13306
DB_USER=dev
DB_PASS=pass
DB_NAME=kidoku

# NextAuth Secret (内部API通信の署名検証に使用)
# Next.jsと同じ値を設定
NEXTAUTH_SECRET=kidoku-local-nextauth-secret

# Server Port
PORT=4000

# MeiliSearch (ルートの.envのMEILI_MASTER_KEYと合わせる)
MEILI_HOST=http://localhost:7700
MEILI_MASTER_KEY=YourMasterKey

# Admin API Key (管理者用APIキー認証、リインデックスなどの管理操作に使用)
ADMIN_API_KEY=your-secure-admin-api-key