// SQLite schema for Claude Code Web sandbox environment
// This is a mock schema for local development without MySQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model sheets {
  id      Int       @id @default(autoincrement())
  userId  String    @map("user_id")
  name    String
  order   Int?      @default(1)
  created DateTime? @default(now())
  updated DateTime? @default(now())
  user    User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  books   books[]

  @@unique([userId, name], map: "uniq_user_id_name")
}

model books {
  id               Int             @id @default(autoincrement())
  userId           String          @map("user_id")
  sheet_id         Int
  title            String
  author           String
  category         String
  image            String
  impression       String
  memo             String
  is_public_memo   Boolean         @default(false)
  is_purchasable   Boolean         @default(false)
  finished         DateTime?
  created          DateTime        @default(now())
  updated          DateTime        @default(now())
  sheet            sheets          @relation(fields: [sheet_id], references: [id], onDelete: Cascade)
  user             User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  yearly_top_books YearlyTopBook[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id               String           @id @default(cuid())
  name             String?          @unique(map: "uniq_name")
  email            String?          @unique
  emailVerified    DateTime?        @map("email_verified")
  image            String?
  admin            Boolean          @default(false)
  accounts         Account[]
  sessions         Session[]
  sheets           sheets[]
  yearly_top_books YearlyTopBook[]
  books            books[]
  AiSummaries      AiSummaries[]
  template_books   template_books[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model YearlyTopBook {
  id      Int      @id @default(autoincrement())
  userId  String   @map("user_id")
  book_id Int
  order   Int      @default(1)
  year    String
  created DateTime @default(now())
  updated DateTime @default(now())
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book    books    @relation(fields: [book_id], references: [id], onDelete: Cascade)

  @@unique([userId, order, year], map: "uniq_user_order_year")
  @@map("yearly_top_books")
}

model AiSummaries {
  id       Int       @id @default(autoincrement())
  userId   String    @map("user_id")
  sheet_id Int
  analysis String    // SQLite doesn't have native JSON, store as string
  token    Int
  created  DateTime? @default(now())
  updated  DateTime? @default(now())
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("ai_summaries")
}

model template_books {
  id             Int      @id @default(autoincrement())
  userId         String   @map("user_id")
  name           String
  title          String
  author         String
  category       String
  image          String
  memo           String
  is_public_memo Boolean  @default(false)
  created        DateTime @default(now())
  updated        DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
